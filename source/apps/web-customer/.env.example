# API Configuration
# Use mock data: true = mock, false = real API
NEXT_PUBLIC_USE_MOCK_API=
NEXT_PUBLIC_API_URL=

# Legacy Logging Flags (DEPRECATED - use NEXT_PUBLIC_USE_LOGGING instead)
# These are still supported as aliases but will be removed in future versions
# NEXT_PUBLIC_MOCK_DEBUG=true enables debugOrder() logging (deprecated)
# NEXT_PUBLIC_DEBUG_CUSTOMER=true enables debugOrder() logging (deprecated)
NEXT_PUBLIC_MOCK_DEBUG=
NEXT_PUBLIC_DEBUG_CUSTOMER=

# App Configuration
NEXT_PUBLIC_APP_NAME=

# Logging (Recommended)
# Primary logging control - gates all structured logs
NEXT_PUBLIC_USE_LOGGING=
# Enable [data] category logs (fetch/mutation lifecycle)
NEXT_PUBLIC_LOG_DATA=
# Log full payloads vs summary (summary = counts, full = masked IDs)
NEXT_PUBLIC_LOG_DATA_FULL=

# Payment (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY is backend-only (API server), kept here for reference only
STRIPE_SECRET_KEY=

# WebSocket (reserved for future real-time features)
NEXT_PUBLIC_WS_URL=

# API Configuration
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_CUSTOMER_APP_URL=

# App Configuration
NEXT_PUBLIC_APP_NAME=

# Authentication
JWT_SECRET=

# WebSocket (Optional)
NEXT_PUBLIC_WS_URL=

# Mock Data (Development)
# Set to 'true' to use mock data instead of real API calls
NEXT_PUBLIC_USE_MOCK_DATA=

# Logging (DEV ONLY - ⚠️ NEVER ENABLE IN PRODUCTION)
# Basic flow logs: navigation, operation lifecycle (safe, low noise)
NEXT_PUBLIC_USE_LOGGING=false

# Data inspection: request params, response shapes, mapper I/O (requires USE_LOGGING=true)
NEXT_PUBLIC_LOG_DATA=false

# Full sample values: actual payloads with redaction/truncation (requires LOG_DATA=true)
# ⚠️ VERY VERBOSE - Use only temporarily for targeted debugging, then disable
NEXT_PUBLIC_LOG_DATA_FULL=false

{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "webpack": false,
    "assets": [
      {
        "include": "../prisma/**/*",
        "outDir": "./dist/prisma",
        "watchAssets": false
      }
    ]
  },
  "entryFile": "main",
  "root": "src"
}